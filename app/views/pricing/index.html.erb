<div class="pricing-table">
  <% @plans.each do |plan| %>
  <div class="pricing-plan">
    <div class="plan-header">
      <%= plan.name %></div>
    <div class="plan-price">
      <span class="plan-price-amount"><span class="plan-price-currency">$</span><%= number_to_currency plan.price, unit: '' %></span>/credit
    </div>
    <div class="plan-items">
      <% plan.details["details"].each do |detail| %>
      <div class="plan-item"><%= detail %></div>
      <% end %>
    </div>
    <div class="plan-footer">
      <button class="button is-fullwidth">Choose</button>
    </div>
  </div>
  <% end %>
</div>
