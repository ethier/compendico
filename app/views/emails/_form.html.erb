<div class="field">
  <%= f.label :address, class: 'label' %>
  <p class="control has-icons-left">
    <%= f.text_field :address, class: 'input is-medium' %>
    <span class="icon is-small is-left">
      <i class="fa fa-inbox" aria-hidden="true"></i>
    </span>
  </p>
</div>

<div class="field">
  <%= f.label :name, class: 'label' %>
  <p class="control has-icons-left">
    <%= f.text_field :name, class: 'input is-medium' %>
    <span class="icon is-small is-left">
      <i class="fa fa-signature" aria-hidden="true"></i>
    </span>
  </p>
</div>

<div class="field">
  <p class="control">
    <%= f.label :from_email, class: 'radio' do %>
      <%= f.radio_button :sender, true, checked: f.object.sender == true %>
      <%= t(:true) %>
    <% end %>
    <%= f.label :from_email, class: 'radio' do %>
      <%= f.radio_button :sender, false, checked: f.object.sender == false %>
      <%= t(:false) %>
    <% end %>
  </p>
</div>

<div class="spacer"></div>
