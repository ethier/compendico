<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <%= breadcrumb(@organization) do %>
      <%= content_tag(:li, link_to(t(:digests), organization_digest_path(@organization))) %>
    <% end %>

    <%= content_tag :h1, t(:digest_setup), class: 'title' %>

    <%= form_for @digest, url: organization_digest_path(@organization, @digest) do |f| %>
      <%= render 'form', f: f %>

      <div class="field is-grouped">
        <p class="control">
          <%= f.submit t(:update), class: 'button is-success' %>
          <a class="button remove_fields existing" href="#">
            <span class="icon is-small is-left">
              <i class="fa fa-trash"></i>
            </span>
          </a>
        </p>
        <p class="control">
          <%= link_to organization_digest_path(@organization, @digest), method: :delete, class: 'button is-link is-danger', data: { confirm: t(:are_you_sure) } do %>
            <span class="icon is-small is-left">
              <i class="fa fa-trash"></i>
            </span>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
