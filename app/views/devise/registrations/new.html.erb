<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <h2><%= t(:signup) %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name, class: 'label' %>
        <p class="control has-icons-left">
          <%= f.email_field :name, autofocus: true, class: 'input' %>
          <span class="icon is-small is-left">
            <i class="fa fa-envelope"></i>
          </span>
        </p>
      </div>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <p class="control has-icons-left">
          <%= f.email_field :email, class: 'input' %>
          <span class="icon is-small is-left">
            <i class="fa fa-envelope"></i>
          </span>
        </p>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <p class="control has-icon-left">
          <%= f.password_field :password, autocomplete: 'off', class: 'input' %>
          <span class="icon is-small is-left">
            <i class="fa fa-lock"></i>
          </span>
        </p>
        <% if @minimum_password_length %>
          <p class="help">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'label' %>
        <p class="control has-icon-left">
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'input' %>
          <span class="icon is-small is-left">
            <i class="fa fa-lock"></i>
          </span>
        </p>
      </div>

      <div class="field">
        <p class="control">
          <%= f.submit t(:signup), class: 'button is-success' %>
        </p>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
